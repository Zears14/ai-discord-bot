# Required: Discord bot token
DISCORD_TOKEN=your-discord-bot-token-here

# Required: PostgreSQL connection string
POSTGRES_URI=postgres://username:password@host:5432/database

# Optional: Google GenAI key (needed for AI text features)
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Cloudflare credentials (needed for image generation features)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id-here
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# Optional: UniRate key (needed for currency conversion command)
UNIRATE_API_KEY=your-unirate-api-key-here

# Optional: Enable dev-only commands/log verbosity
IS_DEVEL=false

# Optional: In production, set to true to enforce certificate verification.
# Default behavior is SSL on with rejectUnauthorized=false when IS_DEVEL=false.
PGSSL_REJECT_UNAUTHORIZED=false

# Optional: Enable PostgreSQL channel binding (SCRAM-SHA-256-PLUS).
# Defaults to true in production (IS_DEVEL=false), false in development.
PG_ENABLE_CHANNEL_BINDING=true

# Optional: Health check server port
PORT=8000
